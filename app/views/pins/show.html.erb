<div class = container>
	<%= image_tag @pin.image.url(:medium) %>

	<p>
	  <strong>Description:</strong>
	  <%= @pin.description %>
	</p>

	<% if @pin.user == current_user %>
		<%= link_to edit_pin_path(@pin) do%>
      <span class="glyphicon glyphicon-edit"></span> Edit
    <% end %>
	<% end %>
	
	<%= link_to 'Back', pins_path %>
</div>